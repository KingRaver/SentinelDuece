# SentinelDuece Crypto Analysis Agent Configuration

# Anthropic Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Twitter Credentials
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# Chrome WebDriver Configuration
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_PROJECT_ID=your_google_project_id
GOOGLE_SHEETS_PRIVATE_KEY=your_google_private_key
GOOGLE_SHEETS_CLIENT_EMAIL=your_google_client_email
GOOGLE_SHEET_ID=your_google_sheet_id

# Retry Configurations
MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Database Configuration
DATABASE_PATH=./data/crypto_history.db

# API Rate Limiting and Performance
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1.5

# Market Analysis Thresholds
PRICE_CHANGE_THRESHOLD=5.0
VOLUME_CHANGE_THRESHOLD=10.0
VOLUME_WINDOW_MINUTES=60

# Advanced Analysis Settings
CORRELATION_SENSITIVITY=0.7
VOLATILITY_THRESHOLD=2.0
VOLUME_SIGNIFICANCE=100000

# Tweet Constraints
TWEET_MIN_LENGTH=220
TWEET_MAX_LENGTH=270
TWEET_HARD_STOP_LENGTH=280

# CoinGecko API Base URL (Optional Override)
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# Optional Debugging Flags
DEBUG_MODE=false
VERBOSE_LOGGING=false
